{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "experimentalBigInt": true,
    "experimentalDecorators": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
